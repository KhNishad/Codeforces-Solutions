#include<bits/stdc++.h>
using namespace std;
int main ()
{
    long long int  t , n ;
    cin>>t;
    while(t>0)
    {
        cin>>n;
 
       if(n > 2 && n%2==0)
       {
           n = n/2 - 1;
           cout<<n<<endl;
       }
       else if(n>2){
            n  = n/2;
        cout<<n<<endl;
       }
       else{
        cout<<0<<endl;
       }
       t--;
    }
}
